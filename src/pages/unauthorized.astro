---
export const prerender = true;
import Footer from "../components/Footer.astro";
import NavBar from "../components/NavBar.astro";
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import imgCoche from "../assets/hero.webp";
---

<Layout title="Acceso no autorizado">
    <NavBar scrollLimit={200} disableTheme={false} />
    <Image
            src={imgCoche}
            alt="Coche"
            class="w-full h-full p-4 md:p-0 object-scale-down object-center absolute inset-0 -z-50 dark:brightness-[0.5] opacity-40 dark:opacity-50"
    />
    <main
            class="container h-[calc(100dvh-144px)] flex flex-col justify-center items-center"
    >
        <h1 class="text-xl md:text-3xl font-extralight dark:text-white">
            Ups, parece que no tienes acceso
        </h1>
    </main>
    <Footer transparent={true} />
</Layout>
