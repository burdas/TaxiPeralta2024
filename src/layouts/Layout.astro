---
interface Props {
  title: string;
}

const { title } = Astro.props;

import LOGO from "../assets/logo.jpg";
import OG_IMAGE from "../assets/taxiPeraltaBanner.jpg";
---

<!doctype html>
<html lang="es" class="dark scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Taxi de Peralta, Navarra (España)" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href={LOGO.src} />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="author" content="Burdas">
    <!-- Meta etiquetas para redes sociales (Open Graph) -->
    <meta property="og:site_name" content="Taxi Peralta">
    <meta property="og:type" content="website" />
    <meta property="og:title" content="Taxi Peralta">
    <meta property="og:description" content="Taxi de Peralta, Navarra (España)">
    <meta property="og:image:secure_url" itemprop="image" content={OG_IMAGE.src}>
    <meta property="og:url" content="https://taxi-peralta2024.vercel.app/">
    <meta property="og:updated_time" content="1717150800" />
    <meta property="og:image:width" content="1920" />
    <meta property="og:image:height" content="1080" />
    

    <!-- Meta etiquetas para Twitter -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content="Taxi Peralta">
    <meta name="twitter:description" content="Taxi de Peralta, Navarra (España)">
    <meta name="twitter:image" content={OG_IMAGE.src}>
    <meta name="twitter:url" content="https://taxi-peralta2024.vercel.app/">
    <script type="text/javascript" is:inline>
      // Laod theme preferences
      if (
        localStorage.theme === "dark" ||
        (!("theme" in localStorage) &&
          window.matchMedia("(prefers-color-scheme: dark)").matches)
      ) {
        document.documentElement.classList.add("dark");
      } else {
        document.documentElement.classList.remove("dark");
      }
    </script>
  </head>
  <body
    class="dark:bg-black transition-colors duration-300"
  >
    <slot />
  </body>
</html>
<style>
  body {
    font-family:
      ui-sans-serif,
      system-ui,
      sans-serif,
      "Apple Color Emoji",
      "Segoe UI Emoji",
      Segoe UI Symbol,
      "Noto Color Emoji";

    --sb-track-color: #FFF;
    --sb-thumb-color: #262626;
    --sb-size: 14px;
  }

  .dark body {
    font-family:
      ui-sans-serif,
      system-ui,
      sans-serif,
      "Apple Color Emoji",
      "Segoe UI Emoji",
      Segoe UI Symbol,
      "Noto Color Emoji";

    --sb-track-color: #000;
    --sb-thumb-color: #262626;
    --sb-size: 14px;
  }

  body::-webkit-scrollbar {
    width: var(--sb-size);
  }

  body::-webkit-scrollbar-track {
    background: var(--sb-track-color);
    border-radius: 1px;
  }

  body::-webkit-scrollbar-thumb {
    background: var(--sb-thumb-color);
    border-radius: 5px;
    border: 1px solid var(--sb-track-color);
  }
</style>
