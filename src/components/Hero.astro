---
import { Image } from "astro:assets";
import heroImage from "../assets/hero.webp";
import HeroButton from "./HeroButton.astro";
---

<main
  class="container h-[calc(100vh-80px)] grid grid-cols-1 md:grid-cols-2 gap-6 justify-center items-center px-6 overflow-visible relative md:static"
>
  <div class="absolute -z-50 bg-sky-500/80 dark:bg-sky-500 rounded-3xl mt-auto left-1/4 w-[200px] md:w-[500px] h-[400px] blur-[150px] md:blur-[200px]"></div>
  <Image
    src={heroImage}
    alt="Imagen de portada"
    style={/*"filter: drop-shadow(0px 0px 100px #0ea5e9);"*/''}
    class="-z-20 overflow-visible opacity-20 dark:opacity-40 md:opacity-100 dark:md:opacity-100"
  />
  <article
    class="flex flex-col justify-center items-center h-full absolute inset-0 md:static gap-4"
  >
    <h1 class="text-6xl sm:text-7xl dark:text-white font-bold text-center">
      To√±o <span
        class="bg-gradient-to-r from-sky-500 to-sky-500/90 md:to-sky-500/60 bg-clip-text text-transparent"
        >Burdaspar</span
      >
    </h1>
    <h2
      class="text-gray-700 dark:text-zinc-400 text-2xl font-mono mt-5 lg:mt-0"
    >
      Taxi Peralta
    </h2>
