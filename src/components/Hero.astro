---
import { Image } from "astro:assets";
import heroImage from "../assets/hero.webp";
import EscudoPeralta from "../assets/escudo_peralta.webp";
---

<main
  class="container h-[calc(100dvh-80px)] grid grid-cols-2 gap-6 justify-center items-center px-6"
>
  <Image
    src={heroImage}
    alt="Imagen de portada"
    style={"filter: drop-shadow(0px 0px 200px #0ea5e9);"}
  />
  <article class="flex flex-col justify-center items-center h-full group">
    <h1 class="text-7xl dark:text-white font-bold">
      To√±o <span
        class="bg-gradient-to-r from-sky-500 to-sky-500/60 bg-clip-text text-transparent"
        >Burdaspar</span>
    </h1>
    <h2 class="text-gray-400 dark:text-zinc-400 text-2xl font-mono">
      Taxi Peralta
    </h2>
    <Image
      src={EscudoPeralta}
      alt="Escudo Peralta"
      class="w-0 group-hover:w-1/3 transition-all duration-500 animate-bounce"
    />
  </article>
</main>
