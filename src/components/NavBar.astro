---
import ThemeButton from "./ThemeButton.astro";

interface RouteProps {
  href: string;
  label: string;
}

const routeList: RouteProps[] = [
  {
    href: "#Informacion",
    label: "Informaci√≥n",
  },
  {
    href: "#Galeria",
    label: "Galeria",
  },
  {
    href: "#Tarifas",
    label: "Tarifas",
  },
  {
    href: "#Caluladora",
    label: "Calcula tu viaje",
  },
  {
    href: "#Enlaces",
    label: "Enlaces",
  },
  {
    href: "#FiestasPeralta",
    label: "Fiestas de Peralta",
  },
  {
    href: "#Contacto",
    label: "Contacto",
  },
];
---

<nav
  class="sticky top-0 w-full p-3 flex flex-row justify-between place-items-center container"
>
  <p class="text-xl text-nowrap font-bold dark:text-white px-3">Taxi Peralta</p>
  <div
    class="hidden lg:flex flex-row justify-center w-full place-items-center gap-3"
  >
    {
      routeList.map(({ href, label }) => (
        <a
          href={href}
          target="_blank"
          class="font-medium text-sm hover:bg-gray-200/50 rounded-md py-2 px-3 dark:text-white transition-colors duration-100 dark:hover:bg-gray-200/20"
        >
          {label}
        </a>
      ))
    }
  </div>
  <div>
    <ThemeButton />
    <button
      class="lg:hidden hover:bg-gray-200/50 dark:hover:bg-gray-200/20 p-3 rounded-md"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="15"
        height="15"
        fill="none"
        class="dark:text-white"
        ><path
          fill="currentColor"
          fill-rule="evenodd"
          d="M1.5 3a.5.5 0 0 0 0 1h12a.5.5 0 0 0 0-1h-12ZM1 7.5a.5.5 0 0 1 .5-.5h12a.5.5 0 0 1 0 1h-12a.5.5 0 0 1-.5-.5Zm0 4a.5.5 0 0 1 .5-.5h12a.5.5 0 0 1 0 1h-12a.5.5 0 0 1-.5-.5Z"
          clip-rule="evenodd"></path></svg
      >
    </button>
  </div>
</nav>
