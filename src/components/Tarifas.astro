---
import { tarifa } from "../model/tarifas.ts";
import TarifaCard from "./TarifaCard.astro";

const diurna = Object.entries(tarifa.diurna);
const nocturna = Object.entries(tarifa.nocturna);
---
<section id="Tarifas" class="container min-h-[calc(70dvh)] my-8">
    <h3 class="text-4xl font-bold text-center dark:text-white">Tarifas</h3>
    <div class="grid grid-cols-1 md:grid-cols-2  lg:grid-cols-3 gap-8 mt-16 justify-items-center">
        {diurna.map(t => <TarifaCard nombre={t[0]} cantidad={t[1]} tipo="diurna" />)}
        {nocturna.map(t => <TarifaCard nombre={t[0]} cantidad={t[1]} tipo="nocturna" />)}
    </div>
</section>