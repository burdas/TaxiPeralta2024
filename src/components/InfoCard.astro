---
import Card from "./Card.astro";
import GetIcon from "./Icons/GetIcon.astro";

const { informacion, title } = Astro.props;
---

<Card class="w-full lg:w-3/4">
  <h4 class="text-xl font-semibold text-center dark:text-white">
    {title.split(" ")[0]}
    <span class="text-sky-500">
      {title.split(" ")[1]}
    </span>
  </h4>
  <ul class="mt-4">
    {
      informacion.map((i: string) => (
        <li class="flex flex-row gap-3 px-3 mt-3">
          <GetIcon icon="GreenCheck" />
          <p class="text-md font-medium text-neutral-700/70 dark:text-neutral-200/80 flex-grow">
            {i}
          </p>
        </li>
      ))
    }
  </ul>
</Card> 
