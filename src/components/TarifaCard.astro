---

import {numToEur} from '../utils/FormatEur.ts'
import Card from './Card.astro';

interface props {
    cantidad: number;
    nombre: string;
    tipo: 'nocturna' | 'diurna'
}

const { cantidad, nombre, tipo } = Astro.props;

const dictNombreTitle: { [key: string]: string } = {
    kmRecorrido: 'Km Recorrido',
    horaEspera: 'Hora de espera',
    minimoPercepcion: 'Mínimo de percepción'
}
---

<Card class="w-full">
  <h4 class="text-xl font-semibold mb-2 text-white">

    {dictNombreTitle[nombre] ?? 'No esta el valor en el diccionario'}
  </h4>
  <p class="text-lg font-medium text-white">{numToEur(cantidad)}</p>
</Card>